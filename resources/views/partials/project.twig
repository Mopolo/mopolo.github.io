<div class="mb-10 md:mb-12">
    <h2 class="text-lg md:text-xl {{ colors.textLightBg }} font-medium mb-2" id="{{ project.name|lower|slug }}">
        <a href="#{{ project.name|lower|slug }}">
            {{ project.name }}

            <div class="float-right font-light text-base">
                {{ include('partials/tags.twig', {tags: project.tags}) }}
            </div>
        </a>
    </h2>

    <div class="flex flex-wrap">
    {% for img in project.images %}
        <a href="{{ img.url }}">
            <img src="{{ img.thumbnail }}" alt="Image {{ loop.index }} du projet {{ project.name }}" class="object-cover rounded border border-2 border-gray-600 mx-1 mb-1" style="max-width: 60px;" />
        </a>
    {% endfor %}
    </div>

    {% if project.summary %}
        <p>{{ project.summary | trans | md | raw | nl2br }}</p>
    {% endif %}

    {% if project.url %}
        <div class="mt-3 relative left-[-17px]">
            <span class="icon fill-current text-project-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
            </span>
            <a href="{{ project.url }}" target="_blank" class="text-xs md:text-sm underline font-medium">
                {{ project.url }}
            </a>
        </div>
    {% endif %}
</div>
